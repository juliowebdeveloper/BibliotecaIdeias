</p:ajaxStatus>  


     <section class="bordas main degrade-horizontal">
              <section class="inner">


						
  <h:form id ="editorg">	
				<p:growl id ="growl" showDetail="false" />
	
			
  				  			
  			<h2><h:graphicImage alt="organizadoraicon" value="/site/images/icons/organizadoraicon.png" width="30" height="30" style ="clear:left; margin-right: 6px; margin-left: 0px; margin-top:0; margin-bottom: 0;"  />Organizadora</h2>
<hr/>


<p:panelGrid columns="2" styleClass="form-cadastro inner">
				<p:graphicImage alt="#{editFeiraBean.feira.organizadora}" width="120" height="80" value ="#{editFeiraBean.feira.organizadora.logourl}" />
				<br/>
				<h:outputText value="#{editFeiraBean.feira.organizadora.razaoSocial}"  />
				<br/>
				<h:outputLabel value="Telefone: " for="orgtel" />
					
					<h:outputText value="#{editFeiraBean.feira.organizadora.telefone}" id ="orgtel" />
						
					</p:panelGrid>
  			
  			
  			
  
  			
  			
  			<h2>Alterar Organizadora</h2>
  			
  			
  			<h:outputText style="padding-bottom: 10px;" value="Atenção: Caso não saiba qual a organizadora, selecione 'Organizadora Genérica - BI'" styleClass="ui-messages-warn" />

				<h:panelGrid columns="2"  styleClass ="funcFormCadastro">

				<h:outputLabel value="*Organizadora: " styleClass="label"  for="organizadora"/>
					
				
							
		 <p:selectOneMenu value="#{editFeiraBean.orgSelecionada}" id="organizadora" converter="orgConverter" panelStyle="width:190px; background-color: white;"  
                     height="150"  effect="fade" var="o" style="width:260px"  filter="true" filterMatchMode="startsWith">  
            <f:selectItem itemLabel="Selecione uma organizadora"  noSelectionOption="true" itemValue="" />  
            <f:selectItems value="#{editFeiraBean.orgs}" var="orgs" itemLabel="#{orgs.razaoSocial}" itemValue="#{orgs}"/>  
            
 
       			<p:column>
<p:graphicImage alt="#{o.razaoSocial}" value="#{o.logourl}"  width="90" height="50"/>
<br/>


#{o.razaoSocial}
</p:column>
</p:selectOneMenu>

<p:commandButton value="Alterar Organizadora" update = ":editorg" actionListener="#{editFeiraBean.alterarOrganizadora}" />
</h:panelGrid>


</h:form>


<h:form id ="editlocal">
			<p:growl id ="growl1" showDetail="false" />
			
  						
			<h2><h:graphicImage alt="locaisicon" value="/site/images/icons/locaisicon.png" width="30" height="30" style ="clear:left; margin-right: 6px; margin-left: 0px; margin-top:0; margin-bottom: 0;"  />Local/Pavilhão</h2>
<hr/>
				  					
<p:panelGrid columns="1" styleClass="form-cadastro inner">			

					<h:outputText value="#{editFeiraBean.feira.local.nome}" />
					
			<h:outputText value="#{editFeiraBean.feira.local.endereco} , #{editFeiraBean.feira.local.numero} -- #{editFeiraBean.feira.local.bairro}" />
					<h:outputText value="#{editFeiraBean.feira.local.cidade.nome}" />
					
		</p:panelGrid>
		
			
  			<h2>Alterar Pavilhão</h2>
  			

	<h:outputText style="padding-bottom: 10px;" value="Atenção: Caso não saiba onde será realizado o evento, selecione 'Pavilhão Genérico - BI'" styleClass="ui-messages-warn" />
				<h:panelGrid columns="2"  styleClass ="funcFormCadastro">

				<h:outputLabel value="*Local/Pavilhão: " styleClass="label" for="pavilhao"/>

 <p:selectOneMenu value="#{editFeiraBean.pavSelecionado}" converter="pavConverter" panelStyle="width:190px; background-color: white;"  
                   height="150"   effect="fade" var="p"  id ="pavilhao" style="width:260px"  filter="true" filterMatchMode="startsWith">  
            <f:selectItem itemLabel="Selecione um pavilhão"  itemValue="" noSelectionOption="true" />  
            <f:selectItems value="#{editFeiraBean.pavs}" var="pavs" itemLabel="#{pavs.nome}" itemValue="#{pavs}"/>  
       			<p:column>
<h:outputText value="#{p.nome}" />
<br/>
<h:outputText value ="Endereço:" />
<br/>
<h:outputText value="#{p.endereco}, #{p.numero} - #{p.bairro} - #{p.cidade.nome}" />

</p:column>
</p:selectOneMenu>
<p:commandButton value="Alterar Pavilhão" update = ":editlocal" actionListener="#{editFeiraBean.alterarPavilhao}" />

</h:panelGrid>
  			
  			
